<% provide(:title, @user.name) %>

<div class="container">
<div class="row">
	<aside class="span4">
		<section>			
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<p><%= @user.email %></p>
			<p>
				<!--Edit User -->
				<% if is_self %>
					  <selection>
    				  <%= render 'shared/micropost_form' %>
  					  </selection>
				<% end %>
			</p>
			<p>
			<%=	Faker::Lorem.paragraph(sentence_count = 5) %>
			</p>
		</section>
	</aside>

<div class="span8">
<% if @user.microposts.any? %>
	<h3>Microposts (<%= @user.microposts.count %>)</h3>
	<ol class="microposts">
		<%= render @microposts %>
	</ol>
	<%= will_paginate @microposts %>
<% end %>
</div>

</div>
</div>